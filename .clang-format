  # "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,
  # "C_Cpp.vcFormat.indent.withinParentheses": "alignToParenthesis",
  # "C_Cpp.vcFormat.indent.preprocessor": "none",
  # "C_Cpp.clang_format_style": "{BasedOnStyle: Google, BreakBeforeBraces: Attach, AlignConsecutiveMacros: true, ColumnLimit: 0, IndentPPDirectives: BeforeHash}"


Language:        Cpp
BasedOnStyle:   Google
AlignConsecutiveMacros: true
AlignTrailingComments: true
ColumnLimit: 0
IndentPPDirectives: BeforeHash
BreakBeforeBraces: Attach
